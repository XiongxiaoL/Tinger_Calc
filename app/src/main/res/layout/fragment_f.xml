<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--    第一组-->
    <RelativeLayout
        android:id="@+id/data_1"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/clear1"
            android:text="@string/clear"
            android:onClick="clear"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_1"
            android:hint="@string/dataX"
            android:gravity="left"
            android:layout_centerHorizontal="true"
            android:minLines="3"
            android:layout_marginRight="5dp"
            android:maxLines="3"
            android:background="@drawable/shape_border"
            android:textColor="@color/black"

            android:layout_toRightOf="@id/clear1"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </RelativeLayout>

    <!--    第2组-->
    <RelativeLayout
        android:id="@+id/data_2"
        android:layout_marginTop="10dp"
        android:layout_below="@id/data_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/clear2"
            android:text="@string/clear"
            android:onClick="clear"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/black"
            android:layout_alignParentLeft="true"
            android:layout_marginRight="5dp"
            android:background="@drawable/shape_border"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_2"
            android:hint="@string/dataY"
            android:layout_marginRight="5dp"
            android:gravity="left"
            android:layout_centerHorizontal="true"
            android:minLines="3"
            android:maxLines="3"
            android:background="@drawable/shape_border"
            android:textColor="@color/black"
            android:layout_toRightOf="@id/clear2"
            android:layout_width="match_parent"
            android:layout_height="100dp"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl12"
        android:layout_below="@id/data_2"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/et_insert1"
            android:layout_width="200dp"
            android:maxLines="1"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_border"
            android:hint="@string/enterdaichazhidian"
            android:layout_height="wrap_content"/>
        <EditText
            android:visibility="gone"
            android:id="@+id/et_insert2"
            android:layout_marginTop="10dp"
            android:layout_below="@id/et_insert1"
            android:layout_width="250dp"
            android:maxLines="1"
            android:textSize="10dp"
            android:inputType="number"
            android:layout_marginLeft="5dp"
            android:background="@drawable/shape_border"
            android:hint="在此输入牛顿插值的插值次数（整数，可选）"
            android:layout_height="wrap_content"/>
        <Button
            android:text="@string/ok"
            android:id="@+id/submit"
            android:layout_marginRight="5dp"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_border"
            android:checked="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>
    <TableLayout
        android:layout_below="@id/rl12"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            >
            <TextView
                android:visibility="gone"
                android:text="牛顿插值"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />


        </TableRow>
        <TextView
            android:id="@+id/tv_1"
            android:visibility="gone"
            android:text="这里显示牛顿插值"
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/shape_border"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            >
            <TextView

                android:text="@string/duoxiangshichazhijieguo"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />


        </TableRow>
        <TextView
            android:id="@+id/tv_2"
            android:text=" "
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:gravity="start"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:background="@drawable/shape_border"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />
        <TableRow
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            >
            <TextView

                android:text="@string/lagelangrichazhijieguo"
                android:textColor="@color/black"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                />


        </TableRow>
        <TextView
            android:id="@+id/tv_3"
            android:text=" "
            android:textColor="@color/black"
            android:layout_width="0dp"
            android:gravity="start"
            android:layout_margin="10dp"
            android:background="@drawable/shape_border"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            />

    </TableLayout>
</RelativeLayout>