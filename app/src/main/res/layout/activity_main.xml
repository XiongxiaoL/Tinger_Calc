<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/dabeijing"
    tools:context=".activity.MainActivity">

    <!-- 顶部logo图片1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#0FFFFF"
        android:gravity="start"
        android:paddingTop="30dp">

        <!-- 顶部logo图片1 -->
        <ImageView
            android:id="@+id/logo1"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/logo1"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:layout_marginRight="-250dp" />

        <!-- 顶部logo图片2 -->
        <ImageView
            android:id="@+id/logo2"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/logo4"
            android:layout_gravity="start"
            android:layout_weight="1" />

    </LinearLayout>




    <!-- 网格布局容器 -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="70dp"
        android:background="#0FFFFF"
        android:backgroundTint="#C7CED6"
        android:columnCount="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="#C7CED6"
            android:gravity="center">

            <ImageButton
                android:id="@+id/daily"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#C7CED6"
                android:onClick="choose"
                android:scaleType = "centerInside"
                android:src="@drawable/daily" />

            <TextView
                android:layout_marginTop="-30dp"
                android:text="日常计算"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="#B0B8C1"
            android:gravity="center">

            <ImageButton
                android:id="@+id/professional"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#B0B8C1"
                android:onClick="choose"
                android:scaleType = "centerInside"
                android:src="@drawable/professional" />

            <TextView
                android:layout_marginTop="-30dp"
                android:text="专业计算"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:orientation="vertical"
            android:background="#C7CED6"
            android:gravity="center">

            <ImageButton
                android:id="@+id/customize"
                android:layout_margin="30dp"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="#C7CED6"
                android:onClick="choose"
                android:scaleType = "centerInside"
                android:src="@drawable/team" />

            <TextView
                android:layout_marginTop="-30dp"
                android:text="定制计算"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"/>
        </LinearLayout>





    </GridLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/xuanfu"
        android:layout_width="54dp"
        android:layout_height="54dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:background="#FFFFFF"
        android:src="@drawable/fankui"
        android:onClick="help"
        android:contentDescription="TODO" />

</RelativeLayout>

